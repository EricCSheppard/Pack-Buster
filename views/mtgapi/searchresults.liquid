{% layout 'layout.liquid' %}
{% block content %}
    <div class="container-md mt-4">
        {% if loggedIn %}
            <h2>Results:</h2>
            {% else %}
            <h2>Log in to save some cards!</h2>
        {% endif %}
        <hr>
        <div class="row">
            <div class="row col-11">
                <p><img src="{{ scryResult.image_uris.png }}"</p>
                {% for cards in scryResult %}
                    <div class="col mt-2">
                        <img src="{{ cards.image_uris.png }}" height="311px" width="226px"></img>
                        {% if loggedIn %}
                            <form action="/savedCards" method="POST">
                                <fieldset>
                                    <input 
                                        type="hidden" 
                                        name="name" 
                                        class="form-control"
                                        value="{{ cards.name }}"
                                    >
                                    <input 
                                        type="hidden" 
                                        name="multiverseid" 
                                        class="form-control"
                                        value="{{ cards.multiverse_ids }}"
                                    >
                                </fieldset>
                                <input type="submit" class="btn btn-success" value="Save">
                            </form>
                        {% endif %}
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>  
{% endblock %}