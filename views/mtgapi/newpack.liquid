{% layout 'layout.liquid' %}
{% block content %}
    <div class="container-md mt-4">
        {% if loggedIn %}
            <h2>Your cards:</cards:></h2>
            {% else %}
            <h2>Log in to save some cards!</h2>
        {% endif %}
        <hr>
        <div class="row">
            <div class="row">
                {% for cards in mtgCardPack %}
                    <div class="col mt-1">
                        <img src="{{cards.imageUrl}}" width="226px" height="311px"></img>
                        {% if loggedIn %}
                            <form action="/savedCards" method="POST">
                                <fieldset>
                                    <input 
                                        type="hidden" 
                                        name="name" 
                                        class="form-control"
                                        value="{{cards.name}}"
                                    >
                                    <input 
                                        type="hidden" 
                                        name="multiverseid" 
                                        class="form-control"
                                        value="{{cards.multiverseid}}"
                                    >
                                </fieldset>
                                <input type="submit" class="btn btn-success" value="Save">
                            </form>
                        {% endif %}
                    </div>
                {% endfor %}
            </div>
            <div class="">
            {%- comment -%}
            {% render './sidebar.liquid', savedCards: savedCards, userId: userId  %}
            {%- endcomment -%}
            </div>
        </div>
    </div>  
{% endblock %}
