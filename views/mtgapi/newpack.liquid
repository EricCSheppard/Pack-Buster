{% layout 'layout.liquid' %}
{% block content %}
    <div class="container-md">
        {% if loggedIn %}
            <h2>Your cards!</h2>
            {% else %}
            <h2>Log in to save some cards!</h2>
        {% endif %}
        <div class="row">
            {% for cards in mtgCardPack %}
                <div class="col mt-3">
                    <img src="{{cards.imageUrl}}" width="226px" height="311px"></img>
                    {% if loggedIn %}
                        <form action="/savedCards" method="POST">
                            <fieldset>
                                <input 
                                    type="hidden" 
                                    name="name" 
                                    class="form-control"
                                    value="{{cards.name}}"
                                >
                                <input 
                                    type="hidden" 
                                    name="multiverseid" 
                                    class="form-control"
                                    value="{{cards.multiverseid}}"
                                >
                            </fieldset>
                            <input type="submit" class="btn btn-success" value="Save">
                        </form>
                    {% endif %}
                </div>
            {% endfor %}
            {% render './sidebar.liquid', savedCards: savedCards, userId: userId  %}
        </div>
    </div>  
{% endblock %}
