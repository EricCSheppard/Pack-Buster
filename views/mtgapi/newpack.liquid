{% layout 'layout.liquid' %}
{% block content %}
    <div class="container-md">
        <h2>Your Cards!</h2>
            <div class="row">
                {% for cards in mtgCardPack %}
                    <div class="col mt-3">
                        <img src="{{cards.imageUrl}}" width="226px" height="311px"></img>
                        <form action="/savedCards" method="POST">
                            <fieldset>
                                <input 
                                    type="hidden" 
                                    name="name" 
                                    class="form-control"
                                    value="{{cards.name}}"
                                >
                                <input 
                                    type="hidden" 
                                    name="multiverseid" 
                                    class="form-control"
                                    value="{{cards.multiverseid}}"
                                >
                            </fieldset>
                        <input type="submit" class="btn btn-success" value="Save">
                        </form>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
