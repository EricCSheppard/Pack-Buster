{% layout 'layout.liquid' %}
{% block content %}
<div class="container-md">
    <article>
        <h2>
            {{ savedCard.name }}
        </h2>
        <hr>
        <img src="http://gatherer.wizards.com/Handlers/Image.ashx?multiverseid={{ savedCard.multiverseid }}&type=card">
    <hr>
        {% if savedCard.owner == userId %}
        <div class="btn-group mt-3">
            <form action="/savedCards/{{ savedCard.id }}?_method=DELETE" method="POST">
                <input type="submit" value="Remove" class="btn btn-danger">
            </form>
            <a href="/savedCards/mine" class="btn btn-warning">Back</a>
        </div>
        {% endif %}
    </article>
</div>
{% endblock %}