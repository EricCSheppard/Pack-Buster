{% layout 'layout.liquid' %}
{% block content %}
<div class="container-md">
    <article>
        <h2>
            {{ savedCard.name }}
        </h2>
        <hr>
        <img src="http://gatherer.wizards.com/Handlers/Image.ashx?multiverseid={{ savedCard.multiverseid }}&type=card">
        <div class="cardInfo col-3 mt-2 bg-light">
                <p class="mt-2 ms-3">Notes:<br> {{ savedCard.notes }} </p>
            </div>
    <hr>
        {% if savedCard.owner == userId %}
        <div class="btn-group mt-3">
            <form action="/savedCards/edit/{{ savedCard.id }}" method="GET">
                <input type="submit" value="Edit" class="btn btn-success me-3">
            </form>
            <form action="/savedCards/{{ savedCard.id }}?_method=DELETE" method="POST">
                <input type="submit" value="Remove" class="btn btn-danger me-3">
            </form>
            <a href="/savedCards/user/{{ userId }}" class="btn btn-warning">Back</a>
        {% else %}
            <a href="javascript:history.back()" class="btn btn-warning">Back</a>
        {% endif %}
        </div>
    </article>
</div>
{% endblock %}