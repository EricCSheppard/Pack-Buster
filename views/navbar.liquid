{% block content %}
<nav class="navbar navbar-expand-md navbar-dark bg-primary shadow fs-5">
    <div class="container-fluid">
        <a href="/" class="navbar-brand navshadow">Pack Buster</a>
        {% if loggedIn %}
        <a href="/savedCards/user/{{userId}}" class="nav-link text-light me-3 navshadow">Hello {{ username }}</a>
        {% endif %}
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse navshadow" id="navbarNav">
            {% if loggedIn %}
                <a href="/savedCards" class="nav-link text-light me-3">View All Collections</a>
                <a href="/auth/logout" class="nav-link text-light me-5">Log Out</a>
                <form action="/mtgapi/search" method="POST" class="d-flex" role="search">
                <input class="form-control ms-5" type="search" placeholder="ie Royal Assassin" aria-label="Search" name="name">
                <button class="btn btn-outline-light ms-2" type="submit">Search</button>
                </form>
            {% else %}
                <a href="/auth/signup" class="nav-link text-light me-3">Sign Up</a>
                <a href="/auth/login" class="nav-link text-light me-3">Sign In</a>
            {% endif %}
        </div>
    </div>
</nav>
{% endblock %}