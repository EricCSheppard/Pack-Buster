{% layout 'layout.liquid' %}
{% block content %}
<div class="container-md">
    <article>
        <h2>
            {{ savedPack.title }} -
        </h2>
        <hr>
        {% if savedPack.cards.length > 0 %}
        <div class="container-md row">
            {% for card in savedPack.cards %}
                    {% render '../card.liquid', card: card, userId: userId, savedPack: savedPack %}
            {% endfor %}
        </div>
    {% else %}
        <small>no cards yet...</small>
    {% endif %}
    <hr>
        {% if savedPack.owner == userId %}
        <div class="btn-group mt-3">
            <a href="/savedpacks/{{ savedPack.id }}/edit" class="btn btn-primary">Edit</a>
            <form action="/savedpacks/{{ savedPack.id }}?_method=DELETE" method="POST">
                <input type="submit" value="Delete" class="btn btn-danger">
            </form>
        </div>
        {% endif %}
    </article>
</div>
{% endblock %}