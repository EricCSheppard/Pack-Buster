{% layout 'layout.liquid' %}
{% block content %}
<div class="container-md">
    <article>
        <h2>
            {{ savedPack.title }} -
        </h2>
        {% if savedPack.owner == userId %}
        <div class="btn-group">

            <a href="/savedpacks/{{ savedPack.id }}/edit" class="btn btn-primary">Edit</a>
            <form action="/savedpacks/{{ savedPack.id }}?_method=DELETE" method="POST">
                <input type="submit" value="Delete" class="btn btn-danger">
            </form>
        </div>
        {% endif %}
    </article>
</div>
{% endblock %}